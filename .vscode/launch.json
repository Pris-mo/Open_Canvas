{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Canvas Crawler",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/canvas_crawler/canvas_crawler.py",
        "args": [
          "--course-id", "3376",
          "--output-dir", "${workspaceFolder}/canvas_crawler",
          "--depth-limit", "15",
          "--canvas-url", "https://learn.canvas.net",
          "--verbose"
        ],
        "envFile": "${workspaceFolder}/.env",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Run Current Python File",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "justMyCode": true
      }      
    ]
  }